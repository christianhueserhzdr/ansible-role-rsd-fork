# note 1: docker-compose only reads its environment variables from a special
#         file which must be named '.env'.
#
# note 2: Use of export below is ignored by docker-compose (specifically,
#         python-dotenv) but is useful for source'ing this file

export AUTH_GITHUB_CLIENT_ID={{ rsd_auth_gh_client_id }}
export AUTH_GITHUB_CLIENT_SECRET={{ rsd_auth_gh_client_secret }}
export AUTH_GITHUB_ORGANIZATION={{ rsd_auth_gh_organization }}
export BACKUP_CMD='xenon --version'
export COMPOSE_CONVERT_WINDOWS_PATHS=true
export COMPOSE_PROJECT_NAME=rsd
export DOMAIN={{ rsd_domain }}
export GITHUB_ACCESS_TOKEN={{ rsd_gh_access_token }}
export JWT_SECRET={{ rsd_jwt_secret }}
export SSL_DOMAINS={{ rsd_ssl_domains }}
export ZENODO_ACCESS_TOKEN={{ rsd_zenodo_access_token }}
export ZOTERO_API_KEY={{ rsd_zotero_api_key }}
export ZOTERO_LIBRARY={{ rsd_zotero_library }}
